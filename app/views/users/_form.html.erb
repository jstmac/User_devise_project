<h1><%= @food.id ? 'Edit User' : 'Create User' %></h1>
<hr />
<%= form_with(model: [@user, @food], local: true, class: "row") do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, required: true, autofocus: true %>
  <br />
  <%= f.label :last_name %>
  <%= f.text_field :last_name, required: true %>
  <br />
  <br />
  <%= f.submit nil, class: "btn" %>
<% end %>